<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/doctor_name_button"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:background="@drawable/ic_rounded_button"
        android:text="View doctor"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="@+id/doctor_name_appointment_details2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toEndOf="@+id/doctor_name_appointment_details2"
        app:layout_constraintTop_toTopOf="@+id/doctor_name_appointment_details2"
        app:layout_constraintVertical_bias="0.0" />


    <Button
        android:id="@+id/patient_name_button"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:background="@drawable/ic_rounded_button"
        android:text="View patient"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="@+id/patient_name_appointment_details2"
        app:layout_constraintEnd_toEndOf="@+id/doctor_name_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/doctor_name_button"
        app:layout_constraintTop_toTopOf="@+id/patient_name_appointment_details2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/doctor_name_appointment_details"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:text="Doctor Name:"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.087"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/doctor_name_appointment_details2"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Doctor Name"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/doctor_name_appointment_details"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/doctor_name_appointment_details"
        app:layout_constraintTop_toBottomOf="@+id/doctor_name_appointment_details"
        app:layout_constraintVertical_bias="0.029" />

    <TextView
        android:id="@+id/patient_name_appointment_details"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:text="Patient Name:"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/doctor_name_appointment_details"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/doctor_name_appointment_details"
        app:layout_constraintTop_toBottomOf="@+id/doctor_name_appointment_details2"
        app:layout_constraintVertical_bias="0.028" />

    <TextView
        android:id="@+id/patient_name_appointment_details2"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Patient Name"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/doctor_name_appointment_details2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/doctor_name_appointment_details2"
        app:layout_constraintTop_toBottomOf="@+id/patient_name_appointment_details"
        app:layout_constraintVertical_bias="0.042" />

    <TextView
        android:id="@+id/date_appointment_details"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="-12px"
        android:layout_marginTop="32dp"
        android:text="Details:"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/patient_name_appointment_details"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/patient_name_appointment_details"
        app:layout_constraintTop_toBottomOf="@+id/patient_name_appointment_details2"
        app:layout_constraintVertical_bias="0.042" />

    <TextView
        android:id="@+id/date_appointment_details2"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:text="Date of Slot"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/patient_name_appointment_details2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/patient_name_appointment_details2"
        app:layout_constraintTop_toBottomOf="@+id/date_appointment_details" />

    <TextView
        android:id="@+id/start_time_appointment_details"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Start time"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/date_appointment_details2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.453"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/date_appointment_details2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/end_time_appointment_details"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="end Time"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/date_appointment_details2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.922"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/date_appointment_details2"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/prescription_appointment_drugs"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Drugs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/prescription_appointment_diagnosis"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/prescription_appointment_diagnosis"
        app:layout_constraintTop_toBottomOf="@+id/prescription_appointment_diagnosis"
        app:layout_constraintVertical_bias="0.092" />

    <EditText
        android:id="@+id/prescription_appointment_diagnosis"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="116dp"
        android:ems="10"
        android:hint="Diagnosis"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/end_time_appointment_details"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/date_appointment_details2"
        app:layout_constraintTop_toBottomOf="@+id/start_time_appointment_details"
        app:layout_constraintVertical_bias="0.32" />

    <Button
        android:id="@+id/view_appointment_layout_button1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_rounded_button"
        android:text="Ok"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/prescription_appointment_drugs"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/prescription_appointment_drugs"
        app:layout_constraintTop_toBottomOf="@+id/end_time_appointment_details"
        app:layout_constraintVertical_bias="0.867" />

    <Button
        android:id="@+id/view_appointment_layout_button2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_rounded_button"
        android:text="Ok"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="@+id/view_appointment_layout_button1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.941"
        app:layout_constraintStart_toStartOf="@+id/prescription_appointment_drugs"
        app:layout_constraintTop_toTopOf="@+id/view_appointment_layout_button1"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>