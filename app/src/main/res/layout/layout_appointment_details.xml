<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/doctor_name_appointment_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="Doctor Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.103"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/patient_name_appointment_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Patient Name"
        app:layout_constraintEnd_toEndOf="@+id/doctor_name_appointment_details"
        app:layout_constraintStart_toStartOf="@+id/doctor_name_appointment_details"
        app:layout_constraintTop_toBottomOf="@+id/doctor_name_appointment_details" />

    <TextView
        android:id="@+id/date_appointment_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="86dp"
        android:text="Date of Slot"
        app:layout_constraintEnd_toEndOf="@+id/patient_name_appointment_details"
        app:layout_constraintStart_toStartOf="@+id/patient_name_appointment_details"
        app:layout_constraintTop_toBottomOf="@+id/patient_name_appointment_details" />

    <TextView
        android:id="@+id/start_time_appointment_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Start time"
        app:layout_constraintEnd_toEndOf="@+id/date_appointment_details"
        app:layout_constraintStart_toStartOf="@+id/date_appointment_details"
        app:layout_constraintTop_toBottomOf="@+id/date_appointment_details" />

    <TextView
        android:id="@+id/end_time_appointment_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="168dp"
        android:layout_marginTop="60dp"
        android:text="end Time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/start_time_appointment_details"
        app:layout_constraintTop_toBottomOf="@+id/date_appointment_details" />

    <TextView
        android:id="@+id/prescription_appointment_details"
        android:layout_width="284dp"
        android:layout_height="171dp"
        android:layout_marginTop="48dp"
        android:text="Prescription"
        app:layout_constraintEnd_toEndOf="@+id/end_time_appointment_details"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/start_time_appointment_details"
        app:layout_constraintTop_toBottomOf="@+id/start_time_appointment_details" />

    <Button
        android:id="@+id/view-appointment_layout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/prescription_appointment_details"
        app:layout_constraintStart_toStartOf="@+id/prescription_appointment_details"
        app:layout_constraintTop_toBottomOf="@+id/prescription_appointment_details"
        app:layout_constraintVertical_bias="0.283" />
</androidx.constraintlayout.widget.ConstraintLayout>